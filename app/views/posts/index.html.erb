<div class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class>

      <h1 class="title is-2">Posts</h1>

    <% @posts.each do |post| %>
      <div class="box">
        <div class="media">
          <div class="media-content">
            <div class="content">
              <% if user_signed_in? %>
                <strong><%= post.user.username %></strong><br />
              <% end %>
              <article class="block is-medium">
                <%= post.content %>
              </article>
            </div>
            <% if user_signed_in? %>
              <nav class="level">
                <div class="level-right is-mobile">
                  <%= link_to post, class: "level-item" do %>
                    <span class="icon-text has-text-info">
                      <span class="icon"><i class="fas fa-eye"></i></span>
                      <span>Show</span>
                    </span>
                  <% end %>
                  <%= link_to edit_post_path(post), class:"level-item" do %>
                    <span class="icon-text has-text-info">
                      <span class="icon"><i class="fas fa-wrench"></i></span>
                      <span>Edit</span>
                    </span>
                  <% end %>
                  <%= link_to post, method: :delete, data: { confirm: 'Are you sure?' }, class:"level-item" do %>
                    <span class="icon-text has-text-info">
                      <span class="icon"><i class="fas fa-trash"></i></span>
                      <span>Delete</span>
                    </span>
                  <% end %>
                </div>
              </nav>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>

<br>

<%= link_to 'New Post', new_post_path, class: "button is-success" %>
      </div>
    </div>
  </div>
</div>
      
