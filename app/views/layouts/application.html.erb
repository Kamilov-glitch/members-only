<!DOCTYPE html>
<html>
  <head>
    <title>MembersOnly</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script defer src="https://use.fontawesome.com/releases/v5.3.1/js/all.js"></script>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="alert">

      <% if flash[:notice] %>
        <div class="notification is-primary global-notification">
          <p class="notice"><%= notice %></p>
        </div>
      <% end %>

      <% if flash[:alert] %>
        <div class="notifiaction is-primary global-notification">
          <p class="alert"><%= alert %></p>
        </div>
      <% end %>

    </div>

    <nav class="navbar is-success">
      <div class="navbar-brand">
        <%# <p class="title is-3 has-text-white-ter">Members-Only</p> %>
        <%= link_to root_path, class: "navbar-item" do %>
          <h1 class="title is-3 has-text-white-ter">Members Only</h1>
        <% end %>
      </div>
      <div class="navbar-menu">
        <div class="navbar-end">
          <div class="navbar-item">
            <div class="field is-grouped">
            <% if user_signed_in? %>
              <p class="control">
                <%= link_to "New Post", new_post_path, class: "button is-warning" %>
              </p>
              <p class="control">
                <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "button is-warning" %>
              </p>
            <% else %>
              <p class="control">
                <%= link_to "Sign In", new_user_session_path, class: "button is-warning" %>
              </p>
              <p class="control">
                <%= link_to "Sign Up", new_user_registration_path, class: "button is-warning" %>
              </p>
            <% end %>
            </div>
          </div>
        </div>
      </div>
    </nav>

    <%= yield %>
  </body>
</html>
